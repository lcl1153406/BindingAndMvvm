<Window x:Class="LoongEgg.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoongEgg"
        xmlns:control="clr-namespace:LoongEgg.Presentation.Demo;assembly=LoongEgg.Presentation.Demo"        
        mc:Ignorable="d"
        Title="ColorPicker" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <control:ColorPicker Height="120"
                             Margin="5" 
                             Color="Beige" 
                             ColorChanged="ColorPicker_ColorChanged"/>

        <TextBlock x:Name="lblColor"
                   Margin="2"
                   VerticalAlignment="Stretch"
                   Grid.Row="1"/>
    </Grid>
</Window>
